<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="480px"
        android:layout_height="220px"
        android:layout_centerHorizontal="true"
        android:src="@drawable/resistor_img" />

    <View
        android:id="@+id/colour1"
        android:layout_width="15px"
        android:layout_height="85px"
        android:layout_alignLeft="@id/imageView1"
        android:layout_marginLeft="160px"
        android:layout_marginTop="73px"
        android:background="#964b00" />

    <View
        android:id="@+id/colour2"
        android:layout_width="15px"
        android:layout_height="84px"
        android:layout_marginLeft="35px"
        android:layout_marginTop="73px"
        android:layout_toRightOf="@id/colour1"
        android:background="#000000" />

    <View
        android:id="@+id/colour3"
        android:layout_width="15px"
        android:layout_height="85px"
        android:layout_marginLeft="35px"
        android:layout_marginTop="73px"
        android:layout_toRightOf="@id/colour2"
        android:background="#964b00" />

    <View
        android:id="@+id/colour4"
        android:layout_width="15px"
        android:layout_height="85px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="72px"
        android:layout_toRightOf="@id/colour3"
        android:background="#ffd700" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/imageView1"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="2dip"
        android:background="#666666" />

    <TextView
        android:id="@+id/resistance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="20dip"
        android:text="Resistance:" />

    <EditText
        android:id="@+id/resistance_value"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/resistance_text"
        android:layout_alignBottom="@+id/resistance_text"
        android:layout_toRightOf="@+id/resistance_text"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/resistance_value"
        android:layout_alignBottom="@+id/resistance_value"
        android:layout_marginLeft="2dip"
        android:layout_toRightOf="@+id/resistance_value"
        android:text="Î©" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resistance_text"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tolerance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="8dip"
            android:text="Tolerance:" />

        <RadioGroup
            android:id="@+id/tolerances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/five_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:checked="true"
                android:text="5%" />

            <RadioButton
                android:id="@+id/ten_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="10%" />

            <RadioButton
                android:id="@+id/twenty_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="20%" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/get_resistor_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="30dip"
        android:onClick="getResistanceClicked"
        android:text="Get Resistance" />

</RelativeLayout>